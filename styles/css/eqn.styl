$eqn_op_font
	font-family: "Math-Symbol", "TEXT_CONTENT", "Tinos", "Linux Libertine", "Times New Roman", serif;

.eqn, .eqn-display, ul.syntax, i
	.op, .bop, .xc, .bb, .bn
		@extends $eqn_op_font

.content table.eqn-align
	width auto
	margin 0 auto
	tr, td, th
		border none
		padding 0 0.2em
.eqn-display
	text-align: center