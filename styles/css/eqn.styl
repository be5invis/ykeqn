.e 
	display: inline-block;
.b 
	display: block;
	white-space: nowrap;

// equations
.eqn
	line-height: 1.2;
	-webkit-font-feature-settings: "lnum";
	font-feature-settings: "lnum";

	// Chrome bug workaround.
	var
		&.nm
			font-style: normal;

	i, .op, .sp, .e, .frac, .num, .den, .fdv, .hd, .sg, .ss, .ssi, .sc, .bo, .sqrt, .sk, .ei
		font-style: normal
	
	.smallcap
		font-variant:small-caps
	.boldital
		font-weight: bold;
		font-style: italic;
	
	> u, > .seg
		text-decoration: none;
		> .ei
			@extend .e;
			position:relative;
		display: inline-block;
		text-align: left;
	
	.h, .hd
		display: none;

	.bb, .bo
		@extend .e;
		transform-origin: 50% 50%;
		-webkit-transform-origin: 50% 50%;
		-moz-transform-origin: 50% 50%;
		-ms-transform-origin: 50% 50%;
		-o-transform-origin: 50% 50%;

	.sqrt
		display: inline-block;
		padding-left: 1em;
		position: relative;
		&:before
			content: ' ';
			display: block;
			position: absolute;
			top: -1px;
			left: 0;
			bottom: 0;
			width: 1em;
			background: url(ding/sqrt.svg);
			background-size: 1em 100%;
			background-position: left top;
			background-repeat: no-repeat;
		.i, .sk
			@extend .e;
			display: inline-block;
			border-top: 1px solid black;
			margin-top: -1px;

	.sc
		@extend .e;
		vertical-align: middle;
	
	.sp, .sf
		white-space: pre-wrap;
	
	.e.db-overline
		position: relative;
		&:before
			display: block;
			content: ' ';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			height: 1px;
			background: black

	.e.db-underline
		position: relative;
		&:before
			display: block;
			content: ' ';
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			height: 1px;
			background: black

	.e.db-red
		color: red
	.e.db-green
		color: green
	.e.db-blue
		color: blue

	code
		color: #900
	.eb
		display: block;
		height: 0;
		width: 0;
		opacity: 0;
	.r
		display: inline-block;
		position: relative;
		> .ri
			position: relative;
			display: block;
			height: 0;
			> .fl
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				height: 0.05em;
				min-height: 1px;
				margin-top: -0.025em;
				background: black;
				overflow: hidden;

	.r.frac > .ri
		text-align: center;
		padding-left: 0.2em;
		padding-right: 0.2em;
	.r.sss > .ri, .r.mc > .ri, .r.mcc > .ri
		text-align: center
	.r.mcl > .ri
		text-align: left;
	.r.mcr > .ri
		text-align: right
	.r.ss .sp { display: none }

